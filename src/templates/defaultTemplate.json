    {
      "id": "objective",
      "name": "Objective",
      "required": false,
      "fields": ["objective"]
    },
    {
      "id": "skills",
      "name": "Technical Skills",
      "required": false,
      "fields": ["skills"]
    },
    {
      "id": "experience",
      "name": "Professional Experience",
      "required": false,
      "fields": ["experience"]
    },
    {
      "id": "projects",
      "name": "Projects",
      "required": false,
      "fields": ["projects"]
    },
    {
      "id": "education",
      "name": "Education",
      "required": false,
      "fields": ["education"]
    },
    {
      "id": "certifications",
      "name": "Certifications",
      "required": false,
      "fields": ["certifications"]
    },
    {
      "id": "achievements",
      "name": "Achievements",
      "required": false,
      "fields": ["achievements"]
    }
  ]
